<Page
    x:Class="DiaryPro.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DiaryPro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" x:Name="gridMain">
            <RelativePanel x:Name="panelMain"
                           Background="#96f09c">
                
            </RelativePanel>
        </Grid>
        <Grid Grid.Row="1" x:Name="gridFooter">
            <RelativePanel x:Name="panelFooter"
                           Background="#16791b">
                <TextBlock x:Name="txtDateTime"
                           RelativePanel.AlignRightWithPanel="True"
                           Foreground="White"
                           FontSize="36"
                           Margin="5,5,5,5"></TextBlock>
            </RelativePanel>
        </Grid>
    </Grid>
</Page>
